<Window x:Class="PinGen.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinGen.App"
        xmlns:viewmodels="clr-namespace:PinGen.App.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Render" HorizontalAlignment="Left" Height="25" Margin="353,386,0,0" VerticalAlignment="Top" Width="79" Command="{Binding RenderCommand}"/>
        <TextBox AcceptsReturn="True" HorizontalAlignment="Left" Margin="38,64,0,0" TextWrapping="Wrap" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="53"/>
        <TextBox HorizontalAlignment="Left" Margin="38,122,0,0" TextWrapping="Wrap" Text="{Binding Subtitle, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="38,147,0,0" TextWrapping="Wrap" Text="{Binding Captions[0], UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="38,172,0,0" TextWrapping="Wrap" Text="{Binding Captions[1], UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="38,197,0,0" TextWrapping="Wrap" Text="{Binding Captions[2], UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="38,222,0,0" TextWrapping="Wrap" Text="{Binding Footer, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <Button Content="Add Item Images" HorizontalAlignment="Left" Margin="38,342,0,0" VerticalAlignment="Top" Width="96" Click="AddItemImages_Click"/>
        <ListBox ItemsSource="{Binding ItemImagePaths}" Margin="38,247,309,97"/>
    </Grid>
</Window>
