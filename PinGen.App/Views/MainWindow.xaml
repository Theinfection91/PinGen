<Window x:Class="PinGen.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinGen.App"
        xmlns:viewmodels="clr-namespace:PinGen.App.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Render" HorizontalAlignment="Left" Height="25" Margin="347,207,0,0" VerticalAlignment="Top" Width="65" Command="{Binding RenderCommand}"/>
        <TextBox HorizontalAlignment="Left" Margin="26,123,0,0" TextWrapping="Wrap" Text="{Binding Captions[0], UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="26,162,0,0" TextWrapping="Wrap" Text="{Binding Captions[1], UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="26,200,0,0" TextWrapping="Wrap" Text="{Binding Captions[2], UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="20"/>
    </Grid>
</Window>
